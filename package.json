{
  "name": "typescript-template",
  "version": "0.0.1",
  "description": "A template for a modern typescript project with strict lint checking.",
  "main": "src/main.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "start": "pnpm build && node build/main.js",
    "lint": "pnpm eslint --report-unused-disable-directives --max-warnings 0 src --ext .ts,.tsx",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "check-ts": "tsc --noEmit"
  },
  "author": "maxwhale99@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.3.24",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  }
}
